<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSettings"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="5" >
    </Space>
    <TextView
        android:id="@+id/tv_accountPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Preferences"
        android:textStyle="bold"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>
    <TextView
        android:id="@+id/userProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="16dp"
        android:textColor="@color/black"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_privacySettings"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Privacy Settings (posting your records anonymously)" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>
    <TextView
        android:id="@+id/tv_additionalSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Settings"
        android:textStyle="bold" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>
    <TextView
        android:id="@+id/tv_unitPreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Unit Preference (select the units)" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>
    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Comments (please enter your comments)" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2" >
    </Space>
    <TextView
        android:id="@+id/tv_misc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misc."
        android:textStyle="bold" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" >
    </Space>
    <TextView
        android:id="@+id/tv_webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Webpage (https://www.sfu.ca/computing.html)" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="30" >
    </Space>

</LinearLayout>